server {
        server_name www.dfiid.com;
        return 301 $scheme://dfiid.com$request_uri;
}

server {
        server_name dfiid.com;

        location / {
                proxy_pass http://127.0.0.1:8000;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        location /favicon.ico {
                alias /root/dfiid/project/s/favicon.ico;
        }

        location /apple-touch-icon.png {
                alias /root/dfiid/project/s/apple-touch-icon.png;
        }

        location /robots.txt {
                alias /root/dfiid/project/s/robots.txt;
        }

        location /s/ {
                alias /root/dfiid/project/s/;
        }
}