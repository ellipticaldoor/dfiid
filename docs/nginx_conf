server {
        server_name www.withaliasing.com;
        return 301 $scheme://withaliasing.com$request_uri;
}

server {
        server_name withaliasing.com;

        location / {
                proxy_pass http://127.0.0.1:8000;
                proxy_set_header Host $host;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        location /favicon.ico {
                alias /root/withaliasing/project/s/favicon.ico;
        }

        location /apple-touch-icon.png {
                alias /root/withaliasing/project/s/apple-touch-icon.png;
        }

        location /robots.txt {
                alias /root/withaliasing/project/s/robots.txt;
        }

        location /s/ {
                alias /root/withaliasing/project/s/;
        }
}